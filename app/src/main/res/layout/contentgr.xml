<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".cs.update_rekapan"
    tools:showIn="@layout/activity_update_rekapan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                style="@style/headerText"
                android:text="Menu Apps"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout style="@style/profileDetailsLayout"
                android:onClick="onButtonClick"
                android:id="@+id/panduan">
                <ImageView
                    android:id="@+id/nameImageView"
                    android:src="@drawable/panduan"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:text="PANDUAN"
                    android:layout_toRightOf="@id/nameImageView"
                style="@style/profileDetailsTextMain" />

                <TextView
                    android:text="panduan penggunaan aplikasi"
                    android:layout_toRightOf="@id/nameImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout"
                android:onClick="onButtonClick"
                android:id="@+id/guru">
                <ImageView
                    android:id="@+id/emailImageView"
                    android:src="@drawable/akun"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="DATA PENILAIAN"
                    android:layout_toRightOf="@id/emailImageView"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:text="rekap data penilaian"
                    android:layout_toRightOf="@id/emailImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>

            <View style="@style/proifleDetailsView" />
            <RelativeLayout style="@style/profileDetailsLayout"
                android:onClick="onButtonClick"
                android:id="@+id/logout">
                <ImageView
                    android:id="@+id/addressImageView"
                    android:src="@drawable/logout"
                    style="@style/profileDetailsImage" />

                <TextView
                    android:text="KELUAR"
                    android:layout_toRightOf="@id/addressImageView"
                    style="@style/profileDetailsTextMain" />

                <TextView
                    android:text="keluar dari aplikasi"
                    android:layout_toRightOf="@id/addressImageView"
                    style="@style/profileDetailsMiniText" />

            </RelativeLayout>



        </LinearLayout>

</android.support.v4.widget.NestedScrollView>
