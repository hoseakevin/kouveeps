<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.add_produk"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt"
            android:visibility="gone"
            android:text="nomor transaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:visibility="gone"
            android:id="@+id/spin_id_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <info.hoang8f.widget.FButton
            android:layout_marginTop="20px"
            android:text="transaksi kembali"
            android:id="@+id/trams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="nama pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spin_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="nama produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spin_produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:hint="harga"
                android:id="@+id/add_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:hint="jumlah beli"
                android:id="@+id/add_barang_beli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <info.hoang8f.widget.FButton
            android:layout_marginTop="20px"
            android:text="hitung"
            android:id="@+id/hitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="number"
                android:hint="total harga"
                android:id="@+id/tot_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <info.hoang8f.widget.FButton
            android:layout_marginTop="20px"
            android:text="simpan penjualan"
            android:id="@+id/simpan_rekapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:textColor="#EC0D0D"
            android:background="@color/colorPrimary"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/tot_bayar"
            android:text="total bayar"
            android:layout_gravity="bottom|end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
</ScrollView>